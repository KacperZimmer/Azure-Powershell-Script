$policyValue = @("{`"B2BManagementPolicy`":{`"InvitationsAllowedAndBlockedDomainsPolicy`":{`"AllowedDomains`": [`"gmail.com`"],`"BlockedDomains`": []}}}")  $currentpolicy = Get-AzureADPolicy -All $true | ?{$_.Type -eq 'B2BManagementPolicy'} | select -First 1  Set-AzureADPolicy -Definition $policyValue -Id $currentpolicy.Id 